@using System.Globalization
@using static ASP.NET_Core_OnlineShop.WebConstants;
@model List<DrinksListingViewModel>
<div class="row">
    @foreach (var drink in Model)
    {

        <div class="body col-md-3">
            <div class="card">
                <img class="card-img-top" src="@drink.ImageThumbnailUrl" alt="@drink.Name @drink.Price @drink.ShortDescription">
                <div class="card-body">
                    <h2 class="card-title">
                        <a asp-controller="Drinks" asp-action="Details" asp-route-id="@drink.Id">@drink.Name</a>
                        @drink.Price.ToString("C", CultureInfo.GetCultureInfo("bg-BG"))
                    </h2>
                    <h5 class="card-body"> @drink.ShortDescription </h5>
                    @if (User.Identity.IsAuthenticated && User.IsInRole(AdministratorRoleName))
                    {
                        <a asp-controller="Drinks" asp-action="Edit" asp-route-id="@drink.Id" class="btn btn-warning">Edit</a>
                        <a asp-controller="Drinks" asp-action="Delete" asp-route-id="@drink.Id" class="btn btn-danger">Delete</a>
                    }
                    <a class="btn btn-success" id="cartButton" asp-controller="" asp-action="" asp-route-drinkId="">
                        Buy
                    </a>
                </div>
            </div>
        </div>
    }
</div>